<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.HBox?>
<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.mi.tool.HelloController">
    <MenuBar>

        <Menu text="file">
            <MenuItem text="down" onAction="#downScene"></MenuItem>
            <MenuItem text="send"></MenuItem>

        </Menu>
        <Menu text="属性">

            <MenuItem text="退出" onAction="#exit">

            </MenuItem>
        </Menu>

    </MenuBar>

    <VBox alignment="CENTER">


        <Label fx:id="welcomeText"/>

        <HBox alignment="CENTER">
            <TextField fx:id="idX" maxWidth="60" />
            <TextField fx:id="idY" maxWidth="60" />
            <TextField alignment="CENTER" fx:id="idTxt"/>
        </HBox>


        <Button text="开始" onAction="#onStart" lineSpacing="20"/>
        <Button text="结束" onAction="#onEnd" lineSpacing="20"/>

    </VBox>

</VBox>
